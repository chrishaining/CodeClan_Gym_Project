<h2>Upcoming Classes</h2>

<div class="table-container">
  <table>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Class Name</th>
      <th>Class ID</th>
      </tr>
    <% @upcoming_fitness_classes.each do |fitness_class| %>
    <tr>
      <td><%= fitness_class.format_date %></td>
      <td><%= fitness_class.format_time %></td>
      <td><%= fitness_class.name %></td>
      <td>Class <%= fitness_class.id %></td>
      <td><a href="/fitness_classes/<%= fitness_class.id %>">View details</a></td>
    </tr>
    <% end %>
  </table>
</div>
<hr>
