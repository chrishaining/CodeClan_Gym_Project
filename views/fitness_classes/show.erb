<p>Time: <%= @fitness_class.format_time %></p>


<p>Class attendees: </p>

  <table>
    <% @attendees.each do |attendee| %>
        <tr>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= attendee.pretty_name %></td>
<td><a href="/members/<%= attendee.id %>">  Show member details</a></td>
        </tr>
        <% end %>
      </table>

  <hr>

<form action="/fitness_classes/<%= @fitness_class.id %>/edit" method="GET"><input type="submit" value="Edit Class Details"></form>

