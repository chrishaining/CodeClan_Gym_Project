<h2><%= @fitness_class.name %></h2>

<p>Class ID: <%= @fitness_class.id %></p>
<p>Date: <%= @fitness_class.format_date %></p>
<p>Time: <%= @fitness_class.format_time %></p>
<p>Capacity: <%= @fitness_class.capacity %></p>
<p>Number of members signed up: <%= @fitness_class.attendees.length %></p>

<p>Class attendees: </p>

<table>
  <% @attendees.each do |attendee| %>
  <tr>
    <td><%= attendee.pretty_name %></td>
    <td><a href="/members/<%= attendee.id %>">  Show member details</a></td>
  </tr>
  <% end %>
</table>

<hr>

<form action="/fitness_classes/<%= @fitness_class.id %>/edit" method="GET"><input type="submit" value="Edit Class Details"></form>

<br>
<form action="/fitness_classes/<%= @fitness_class.id %>/delete" method="POST"><input type="submit" value="Delete this class"></form>
